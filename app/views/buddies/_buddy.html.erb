<div class="card my-1">
  <div class="card-body">
    <div class="d-flex align-items-center justify-content-between">
      <div>
        <% if buddy.buddy_image.blank? %>
          <%= image_tag 'hiyoko.png', class: 'rounded-circle', size: '50x50' %>
        <% else %>
          <%= image_tag buddy.buddy_image, class: 'rounded-circle', size: '50x50' %>
        <% end %>
          <%= buddy.name %>
      </div>
      <div>
        <%= link_to buddy_path(buddy), 
                    method: :delete, 
                    data: { confirm: '連携を解除してもよろしいですか？'} do %>
          <button class="btn btn-outline-danger btn-sm text-end">連携解除</button>
        <% end %>
      </div>
    </div>
  </div>
</div>