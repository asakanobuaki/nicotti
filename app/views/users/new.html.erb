<div class='container'>
  <div class='row'>
    <div class="col-lg-12 col-md-12 col-sm-12">
      <div class='login-layout mx-auto'>
        <div class='text-center mt-3'>
          <h1>ユーザー新規作成</h1>
        </div>
          <%= form_with model: @user, local: true do |f| %>
            <div class='form-group mt-3'>
              <%= f.label :name, User.human_attribute_name(:name) %>
              <span class='badge rounded-pill bg-warning'>必須</span>
              <%= f.text_field :name, class: 'form-control mt-1', id: "asaka"%>
            </div>
            <div class='form-group mt-3'>
              <%= f.label :email, User.human_attribute_name(:email) %>
              <span class='badge rounded-pill bg-warning'>必須</span>
              <%= f.text_field :email, class: 'form-control mt-1' %>
            </div>
            <div class='form-group mt-3'>
              <%= f.label :password, User.human_attribute_name(:password)%>
              <span class='badge rounded-pill bg-warning'>必須</span>
              <%= f.password_field :password, class: 'form-control mt-1' %>
            </div>
            <div class='form-group mt-3'>
              <%= f.label :password_confirmation, User.human_attribute_name(:password_confirmation)%>
              <span class='badge rounded-pill bg-warning'>必須</span>
              <%= f.password_field :password_confirmation, class: 'form-control mt-1' %>
            </div>
            <div class='form-group mt-3'>
              <%= f.label :target_number, User.human_attribute_name(:target_number) %>
              <span class='badge rounded-pill bg-warning'>必須</span>
              <%= f.number_field :target_number, class: 'form-control mt-1' %>
            </div>
            <div class='text-center mt-5 mb-5'>
              <%= f.submit t('defaults.register'), class: 'btn login-button' %>
            </div>
          <% end %>
          <div class='text-center my-5'>
            <p>
              登録済みの方は
              <%=link_to "コチラ", login_path %>
            </p>
          </div>
      </div>
    </div>
  </div>
</div>